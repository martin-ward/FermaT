#
##########
##########   simplify-expn [budget] expression
##########
##########   Call the maths simplifier on the given expression
#

BEGIN {
  $FermaT = $ENV{'FermaT'} || "/usr/local/fermat2";
  $FermaT =~ s/"//g;
  $ds = "/"; $ds = "\\" if ($^O eq "MSWin32");
  unshift(@INC, "$FermaT${ds}config");
}

use fermat;

($myname = $0) =~ s|(.*/)*||;   # strip path component from name
$Usage = "Usage: $myname [budget] expression\n";

$budget = 10;
if (@ARGV == 2) {
  $budget = shift;
}

# Check for one argument:
die $Usage if ($#ARGV < 0);
$input = $ARGV[0];
$tmpfile1 = tmpfile($input);

$cmds = <<END_OF_INPUT;
  (if (file-exists? "patch.scm")
      (load "patch.scm")
      (if (file-exists? "patch.tr")
	  (load "patch.tr")))

  (\@PP_Item (\@Simplify (\@Parse_File "$tmpfile1" //T_/Expression) $budget)
	     80
	     "")

END_OF_INPUT

&fermat($cmds);

exit(0);
