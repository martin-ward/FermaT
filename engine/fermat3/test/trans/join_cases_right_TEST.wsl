@Test_Trans(" 1st test of `Join_Cases_Right' ",
	    (FILL Statements IF i = n + 1
                               THEN !P write(line VAR os); EXIT(2)
                             ELSIF last <> item[i]
                               THEN !P write(line VAR os); line := " "; m := 0; EXIT(1)
                               ELSE m := 1 FI
                              ENDFILL),
	    <1, 1>,
	    TR_Join_Cases_Right,
	    < >,
	    (FILL Statements IF last <> item[i] OR i = n + 1
                               THEN !P write(line VAR os);
                                    IF i = n + 1
                                      THEN EXIT(2)
                                      ELSE line := " "; m := 0; EXIT(1) FI
                               ELSE m := 1 FI ENDFILL));


@Test_Trans(" 2nd test of `Join_Cases_Right' ",
	    (FILL Statements IF i = n + 1
                               THEN i := 2; !P write(line VAR os);
			            EXIT(2)
                             ELSIF last <> item[i]
                               THEN i := 2; !P write(line VAR os);
			            line := " "; m := 0; EXIT(1)
                               ELSE m := 1 FI
                              ENDFILL),
	    <1, 1>,
	    TR_Join_Cases_Right,
	    < >,
	    "Fail");




